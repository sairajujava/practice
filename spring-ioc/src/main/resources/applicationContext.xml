<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<!-- configure heeloworld bean -->
	<bean id="hello" class="com.beans.HelloWorld">

		<property name="msg" value="Welcome to Spring World...!" />

	</bean>

	<bean id="dept" class="com.beans.Department" scope="singleton">
		<constructor-arg type="java.lang.String" value="IT" />
		<constructor-arg ref="emp" />

	</bean>

	<bean id="emp" class="com.beans.Employee" scope="singleton">

		<property name="empName" value="Swati" />
		<property name="salary" value="60000" />

	</bean>


</beans>